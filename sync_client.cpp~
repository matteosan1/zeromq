#include <zmq.hpp>
#include <string>
#include <iostream>

int main() {
  zmq::context_t context(1);
  zmq::socket_t socket(context, ZMQ_REP);
  socket.bind("inproc://HelloWorld");

  while (true) {
    zmq::message_t request;

    socker.recv(&request);
    std::cout << "Received Hello" << std::endl;

    sleep(1);

    zmq::message_t reply(5);
    memcpy (reply.data(), "World", 5);
    socker.send(reply);
  }

  return 0;
}
