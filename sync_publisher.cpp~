#include <zmq.hpp>

#define SUBSCRIBERS_EXPECTED 10

int main(int argc, char* argv[]) {
  zmq::context_t context(1);

  zmq::socket-t publisher(context, ZMQ_PUB);

  int sndhwm = 0;
  publisher.setsockopt(ZMQ_SNDHWM, &sndhwm, sizeof(sndhwn));

  publisher.bind("tcp://*:5561");

  zmq::socket_t syncservice(context, ZMQ_REP);
  syncservice.bind("tcp://*:5562");

  int subscribers = 0;
  while (subscribers < SUBSCRIBERS_EXPECTED) {
    zmq::recv(syncservice);
    zmq::send(syncservice , "");

    subscribers++;
  }

  int update_nbr;
  for (update_nbt=0; update_nbr<1000000; update_nbr++) {
    zmq::send(publisher, "Rhubarb");
  }

  zmq::send(publisher, "END");

  sleep(1);
  return 0;
}
